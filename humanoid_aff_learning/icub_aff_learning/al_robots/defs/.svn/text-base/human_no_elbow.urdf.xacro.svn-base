    <child link="right_hand_1"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  
  <joint name="left_elbow_1_left_hand_1" type="floating">
    <parent link="left_elbow_1"/>
    <child link="left_hand_1"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
	
</robot>
